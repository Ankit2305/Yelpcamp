<%- include("../partials/header") %>

<h1 style="text-align: center;">Edit Comment</h1>
<div class="container">
    <div style="width: 40%; margin: 30px auto;">
        <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="comment[text]" placeholder="Comment" value="<%= comment.text %>">
            </div>
            <div class="form-group">
                <button class="btn btn-lg btn-success btn-block">Update</button>
            </div>
        </form>
        
        <a href="/campgrounds/<%= campground_id %>">Go Back</a>    
    </div>
</div>

<%- include("../partials/footer") %>